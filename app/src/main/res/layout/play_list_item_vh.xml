<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="8dp"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/play_list_cover"
        android:layout_width="match_parent"
        android:layout_height="428dp"
        tools:layout_height="300dp"
        tools:layout_width="300dp"
        tools:background="#ffeeee" />

    <TextView
        android:id="@+id/play_list_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/play_list_cover"
        app:layout_constraintStart_toStartOf="@+id/play_list_cover"
        app:layout_constraintTop_toBottomOf="@+id/play_list_cover" />

</android.support.constraint.ConstraintLayout>